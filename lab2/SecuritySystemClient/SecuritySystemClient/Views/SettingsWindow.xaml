<Window x:Class="SecuritySystemClient.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Налаштування системи" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}">
            <TextBlock Text="⚙️ Налаштування системи"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="White"
                      Margin="15"/>
        </Border>

        <!-- Налаштування -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Загальні налаштування -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Margin="0,0,0,15">
                    <StackPanel Margin="15">
                        <TextBlock Text="Загальні"
                                  Style="{StaticResource SubHeaderTextStyle}"/>

                        <CheckBox Content="Автозапуск при включенні системи"
                                 Margin="5,10"/>
                        <CheckBox Content="Згортати у системний трей"
                                 Margin="5,5"/>
                        <CheckBox Content="Зберігати історію дій"
                                 IsChecked="True"
                                 Margin="5,5"/>
                    </StackPanel>
                </Border>

                <!-- Налаштування детекції -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Margin="0,0,0,15">
                    <StackPanel Margin="15">
                        <TextBlock Text="Детекція загроз"
                                  Style="{StaticResource SubHeaderTextStyle}"/>

                        <CheckBox Content="Виявлення руху"
                                 IsChecked="True"
                                 Margin="5,10"/>
                        <CheckBox Content="Розпізнавання осіб"
                                 IsChecked="True"
                                 Margin="5,5"/>
                        <CheckBox Content="Виявлення підозрілих об'єктів"
                                 Margin="5,5"/>

                        <Label Content="Чутливість детекції:"
                              Style="{StaticResource ModernLabelStyle}"
                              Margin="5,10,5,0"/>
                        <Slider x:Name="SensitivitySlider"
                               Minimum="0" Maximum="100" Value="70"
                               TickFrequency="10"
                               IsSnapToTickEnabled="True"
                               Margin="5"/>
                        <TextBlock Text="{Binding Value, ElementName=SensitivitySlider, StringFormat='Поточне значення: {0}%'}"
                                  FontSize="12"
                                  Foreground="Gray"
                                  Margin="5,0"/>
                    </StackPanel>
                </Border>

                <!-- Налаштування сповіщень -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Margin="0,0,0,15">
                    <StackPanel Margin="15">
                        <TextBlock Text="Сповіщення"
                                  Style="{StaticResource SubHeaderTextStyle}"/>

                        <CheckBox Content="Звукові сповіщення"
                                 IsChecked="True"
                                 Margin="5,10"/>
                        <CheckBox Content="Візуальні сповіщення"
                                 IsChecked="True"
                                 Margin="5,5"/>
                        <CheckBox Content="Email сповіщення"
                                 Margin="5,5"/>
                        <CheckBox Content="SMS сповіщення"
                                 Margin="5,5"/>

                        <Label Content="Email для сповіщень:"
                              Style="{StaticResource ModernLabelStyle}"
                              Margin="5,10,5,0"/>
                        <TextBox x:Name="EmailTextBox"
                                Style="{StaticResource ModernTextBoxStyle}"
                                Text="security@example.com"/>
                    </StackPanel>
                </Border>

                <!-- Налаштування запису -->
                <Border Background="White" 
                       CornerRadius="10">
                    <StackPanel Margin="15">
                        <TextBlock Text="Відеозапис"
                                  Style="{StaticResource SubHeaderTextStyle}"/>

                        <Label Content="Якість відео:"
                              Style="{StaticResource ModernLabelStyle}"/>
                        <ComboBox x:Name="QualityComboBox"
                                 FontSize="14"
                                 Margin="5">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Padding" Value="10"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                            <ComboBoxItem Content="Висока (1080p)"/>
                            <ComboBoxItem Content="Середня (720p)" IsSelected="True"/>
                            <ComboBoxItem Content="Низька (480p)"/>
                        </ComboBox>

                        <Label Content="Тривалість зберігання (днів):"
                              Style="{StaticResource ModernLabelStyle}"
                              Margin="5,10,5,0"/>
                        <TextBox x:Name="RetentionDaysTextBox"
                                Style="{StaticResource ModernTextBoxStyle}"
                                Text="30"/>

                        <CheckBox Content="Автоматичне видалення старих записів"
                                 IsChecked="True"
                                 Margin="5,10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижня панель -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right"
                       Margin="15">
                <Button Content="Скинути до стандартних"
                       Style="{StaticResource PrimaryButtonStyle}"
                       Background="{StaticResource WarningColor}"
                       Click="ResetButton_Click"/>
                <Button Content="Зберегти"
                       Style="{StaticResource SuccessButtonStyle}"
                       Click="SaveButton_Click"/>
                <Button Content="Скасувати"
                       Style="{StaticResource DangerButtonStyle}"
                       Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>