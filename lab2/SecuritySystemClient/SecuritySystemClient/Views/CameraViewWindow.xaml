<Window x:Class="SecuritySystem.Views.CameraViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Перегляд камери" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}"
                Padding="15">
            <StackPanel>
                <TextBlock x:Name="CameraNameText"
                          FontSize="18"
                          FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock x:Name="CameraLocationText"
                          FontSize="14"
                          Foreground="#BDC3C7"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Відео потік -->
        <Border Grid.Row="1" 
                Background="Black"
                Margin="10">
            <Grid>
                <!-- Симуляція відеопотоку -->
                <TextBlock Text="📹"
                          FontSize="120"
                          Foreground="#34495E"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Opacity="0.3"/>

                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center">
                    <TextBlock Text="Відеопотік"
                              FontSize="24"
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                    <TextBlock x:Name="StreamStatusText"
                              FontSize="16"
                              Foreground="#27AE60"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                    <TextBlock x:Name="ResolutionText"
                              FontSize="14"
                              Foreground="#BDC3C7"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Оверлей з інформацією -->
                <Border VerticalAlignment="Top" 
                           HorizontalAlignment="Right"
                           Margin="10"
                           Background="#80000000"
                           CornerRadius="5">
                    <StackPanel Margin="10">
                        <TextBlock x:Name="TimeText"
                                  Foreground="White"
                                  FontSize="14"
                                  FontWeight="Bold"/>
                        <TextBlock Text="🔴 REC"
                                  Foreground="Red"
                                  FontSize="12"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Панель керування -->
        <Border Grid.Row="2" 
                Background="White"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Button Content="▶️ Пуск" 
                           Style="{StaticResource SuccessButtonStyle}"
                           Click="StartButton_Click"/>
                    <Button Content="⏸️ Пауза" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="PauseButton_Click"/>
                    <Button Content="⏹️ Стоп" 
                           Style="{StaticResource DangerButtonStyle}"
                           Click="StopButton_Click"/>
                    <Button Content="📸 Знімок" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="SnapshotButton_Click"/>
                    <Button Content="🎥 Запис" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Background="{StaticResource WarningColor}"
                           Foreground="White"
                           Click="RecordButton_Click"/>
                </StackPanel>

                <Button Grid.Column="1"
                       Content="Закрити" 
                       Style="{StaticResource DangerButtonStyle}"
                       Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>