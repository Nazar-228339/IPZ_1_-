<Window x:Class="SecuritySystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система охорони об'єктів" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🛡️ Система охорони об'єктів" 
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserInfoText"
                              FontSize="14"
                              Foreground="#BDC3C7"
                              VerticalAlignment="Center"
                              Margin="30,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📹 Камери" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Background="{StaticResource SecondaryColor}"
                           Click="CamerasButton_Click"/>
                    <Button Content="📊 Архів" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Background="{StaticResource SecondaryColor}"
                           Click="ArchiveButton_Click"/>
                    <Button Content="🔔 Сповіщення" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Background="{StaticResource WarningColor}"
                           Click="NotificationsButton_Click"/>
                    <Button Content="⚙️ Налаштування" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Background="{StaticResource SecondaryColor}"
                           Click="SettingsButton_Click"/>
                    <Button Content="🚪 Вихід" 
                           Style="{StaticResource DangerButtonStyle}"
                           Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основний контент -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва панель - Список камер -->
            <Border Grid.Column="0" 
                    Background="White"
                    CornerRadius="10"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Список камер"
                              Style="{StaticResource SubHeaderTextStyle}"
                              Grid.Row="0"/>

                    <DataGrid Grid.Row="1"
                             x:Name="CamerasDataGrid"
                             Style="{StaticResource ModernDataGridStyle}"
                             Margin="0,10,0,0"
                             MouseDoubleClick="CamerasDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                              Binding="{Binding Id}" 
                                              Width="50"/>
                            <DataGridTextColumn Header="Назва" 
                                              Binding="{Binding Name}" 
                                              Width="*"/>
                            <DataGridTextColumn Header="Розташування" 
                                              Binding="{Binding Location}" 
                                              Width="*"/>
                            <DataGridTextColumn Header="Статус" 
                                              Binding="{Binding StatusText}" 
                                              Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" 
                         Width="5"
                         HorizontalAlignment="Stretch"
                         Background="Transparent"/>

            <!-- Права панель - Сповіщення -->
            <Border Grid.Column="2" 
                    Background="White"
                    CornerRadius="10"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Останні сповіщення"
                              Style="{StaticResource SubHeaderTextStyle}"
                              Grid.Row="0"/>

                    <ListBox Grid.Row="1"
                            x:Name="NotificationsListBox"
                            Style="{StaticResource ModernListBoxStyle}"
                            Margin="0,10,0,10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" 
                                       BorderThickness="0,0,0,1"
                                       Padding="5"
                                       Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" 
                                                  FontWeight="Bold"
                                                  FontSize="13"/>
                                        <TextBlock Text="{Binding Message}" 
                                                  TextWrapping="Wrap"
                                                  FontSize="11"
                                                  Margin="0,3"/>
                                        <TextBlock Text="{Binding TimeString}" 
                                                  FontSize="10"
                                                  Foreground="Gray"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="2"
                           Content="Очистити всі"
                           Style="{StaticResource DangerButtonStyle}"
                           HorizontalAlignment="Stretch"
                           Click="ClearNotificationsButton_Click"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Статус бар -->
        <Border Grid.Row="2" 
                Background="{StaticResource SecondaryColor}"
                Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText"
                          Text="Готово"
                          Foreground="White"
                          VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                          x:Name="DateTimeText"
                          Foreground="#BDC3C7"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>