<Window x:Class="SecuritySystemClient.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизація - Система охорони" 
        Height="500" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundColor}" Margin="0,0,-19,-59">
        <Border Background="White" 
                CornerRadius="10" 
                Margin="30">
            <StackPanel VerticalAlignment="Center" Margin="30">
                <TextBlock Text="🔒 Вхід до системи" 
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="#2C3E50"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>

                <Label Content="Логін:" 
                      FontSize="14"
                      FontWeight="Medium"
                      Foreground="#2C3E50"
                      Margin="5"/>
                <TextBox x:Name="UsernameTextBox" 
                        FontSize="14"
                        Padding="10"
                        Margin="5"/>

                <Label Content="Пароль:" 
                      FontSize="14"
                      FontWeight="Medium"
                      Foreground="#2C3E50"
                      Margin="5,15,5,0"/>
                <PasswordBox x:Name="PasswordBox" 
                            FontSize="14"
                            Padding="10"
                            Margin="5"
                            PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock x:Name="ErrorMessage" 
                          Foreground="Red"
                          FontSize="12"
                          Margin="5"
                          TextWrapping="Wrap"
                          Visibility="Collapsed"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0">
                    <Button Content="Увійти" 
                           Background="#3498DB"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Padding="15,8"
                           Margin="5"
                           Width="120"
                           Cursor="Hand"
                           BorderThickness="0"
                           Click="LoginButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Реєстрація" 
                           Background="#27AE60"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Padding="15,8"
                           Margin="5"
                           Width="120"
                           Cursor="Hand"
                           BorderThickness="0"
                           Click="RegisterButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>